<Page x:Class="BikeShopApp.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShopApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Width="5" Height="5" Background="Transparent" BorderThickness="0" Click="Button_Click"/>
        
        <Button x:Name="BtnProduct"
                Grid.Row="1" Grid.Column="0"
                Margin="20"
                Content="Products" FontSize="20" Click="BtnProduct_Click" />
        <Button x:Name="BtnLiveSupport" 
                Grid.Row="1" Grid.Column="1" 
                Margin="20"
                Content="Live Support" FontSize="20" 
                Click="BtnLiveSupport_Click" />
        <Button x:Name="BtnEmailSupport" 
                Grid.Row="1" Grid.Column="2"
                Margin="20"
                Content="Email Support" FontSize="20" 
                Click="BtnEmailSupport_Click" />

        <!--<Button Grid.Row="2" Grid.Column="2" Background="{StaticResource accentBrush}" Content="{StaticResource button}"/>-->

        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text="Bike Shop" VerticalAlignment="Center"
                   FontSize="40" FontFamily="Impact" FontStyle="Italic" TextAlignment="Center"/>
    </Grid>
</Page>
